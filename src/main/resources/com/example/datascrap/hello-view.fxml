<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.datascrap.HelloController">
<!--    add padding -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="filePath"/>
    <Label fx:id="destinationPath"/>
    <Button text="Select excel file" onAction="#onSelectFileButtonClick"/>
    <Button text="Select Destination Folder" onAction="#onSelectDestinationClick"/>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
<!--    list view with scrolling -->
    <VBox>
        <Label text="List of links to scrap"/>
        <ListView fx:id="listView" prefHeight="500" prefWidth="200"/>
    </VBox>
<!--    scrapStatusLabel-->
    <Label fx:id="scrapStatus"/>
    <Button text="Scrap" onAction="#onScrapButtonClick"/>
</VBox>
